					html += '<a class="myHref" href="javascript:void(0);" onclick="deleteRemark(\''+v.id+'\')"><span class="glyphicon glyphicon-remove" style="font-size: 20px; color: #FF0000;"></span></a>';
					html += '</div>';
					html += '</div>';
					html += '</div>';

				})

                //在这个html元素前面追加html元素
				$("#remarkDiv").before(html);
			}

		})

	}


    function deleteRemark(id) {
        /*
        * 1.根据备注id删除备注
        * 2.刷新备注列表：showRemarkList()
        * */

        $.ajax({
            url: "workbench/activity/deleteRemark.do",
            data: {
                "id": id
            },
            type: "get",
            dataType: "json",
            success: function (response) {
                /*response: {"success": true/false}*/

                if(response.success){

                    //这里直接调用showRemarkList()，会在原有的备注信息基础上追加备注信息。
                    //showRemarkList();

                    //正确做法：找到需要移除的div，把它移除。根据id来找。
                    $("#"+id).remove();

                }else {
                    alert("删除失败");
                }
            }

        })

    }

    function editRemark(id) {

        //给模态窗口中的隐藏域remarkId赋值，在提交更新的时候会用到，用来告知服务器修改的是哪条备注信息。
        $("#remarkId").val(id);

        //取到这个div中的noteContent
        //"#e" + id 是 h5标签的id
        var noteContent = $("#e" + id).html();

        //在点击修改按钮后，弹出的模态窗口中，文本域中会有原本的内容，即noteContent，所以要把noteContent加到模态窗口的文本域中。
        $("#noteContent").val(noteContent);

        //打开修改备注信息的模态窗口
        $("#editRemarkModal").modal("show");

    }
	
